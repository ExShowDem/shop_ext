<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset
            name="global"
            label="COM_RSBMEDIA_CONFIG_GLOBAL_TITLE"
            description="COM_RSBMEDIA_CONFIG_GLOBAL_TITLE_DESC">
        <field
                name="upload_extensions"
                type="text"
                size="50"
                class="input-xxlarge"
                default="bmp,csv,doc,gif,ico,jpg,jpeg,odg,odp,ods,odt,pdf,png,ppt,swf,txt,xcf,xls,BMP,CSV,DOC,GIF,ICO,JPG,JPEG,ODG,ODP,ODS,ODT,PDF,PNG,PPT,SWF,TXT,XCF,XLS"
                label="COM_RSBMEDIA_FIELD_LEGAL_EXTENSIONS_LABEL"
                description="COM_RSBMEDIA_FIELD_LEGAL_EXTENSIONS_DESC"
                />
        <field
                name="upload_maxsize"
                type="text"
                size="50"
                default="10"
                label="COM_RSBMEDIA_FIELD_MAXIMUM_SIZE_LABEL"
                description="COM_RSBMEDIA_FIELD_MAXIMUM_SIZE_DESC"
                />
        <field
                name="spacer1"
                type="spacer"
                class="text"
                label="COM_RSBMEDIA_FOLDERS_PATH_LABEL"
                />
        <field
                name="file_path"
                class="input-xxlarge"
                type="text"
                size="50"
                default="images"
                label="COM_RSBMEDIA_FIELD_PATH_FILE_FOLDER_LABEL"
                description="COM_RSBMEDIA_FIELD_PATH_FILE_FOLDER_DESC"
                />
        <field
                name="image_path"
                type="text"
                size="50"
                default="images"
                class="input-xxlarge"
                label="COM_RSBMEDIA_FIELD_PATH_IMAGE_FOLDER_LABEL"
                description="COM_RSBMEDIA_FIELD_PATH_IMAGE_FOLDER_DESC"
                />
        <field
                name="restrict_uploads"
                type="radio"
                class="btn-group btn-group-yesno"
                default="1"
                label="COM_RSBMEDIA_FIELD_RESTRICT_UPLOADS_LABEL"
                description="COM_RSBMEDIA_FIELD_RESTRICT_UPLOADS_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field
                name="check_mime"
                type="radio"
                class="btn-group btn-group-yesno"
                default="1"
                label="COM_RSBMEDIA_FIELD_CHECK_MIME_LABEL"
                description="COM_RSBMEDIA_FIELD_CHECK_MIME_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field
                name="image_extensions"
                class="input-xxlarge"
                type="text"
                size="50"
                default="bmp,gif,jpg,png"
                label="COM_RSBMEDIA_FIELD_LEGAL_IMAGE_EXTENSIONS_LABEL"
                description="COM_RSBMEDIA_FIELD_LEGAL_IMAGE_EXTENSIONS_DESC"
                />
        <field
                name="ignore_extensions"
                class="input-xxlarge"
                type="text"
                size="50"
                label="COM_RSBMEDIA_FIELD_IGNORED_EXTENSIONS_LABEL"
                description="COM_RSBMEDIA_FIELD_IGNORED_EXTENSIONS_DESC"
                />
        <field
                name="upload_mime"
                class="input-xxlarge"
                type="text"
                size="50"
                default="image/jpeg,image/gif,image/png,image/bmp,application/x-shockwave-flash,application/msword,application/excel,application/pdf,application/powerpoint,text/plain,application/x-zip"
                label="COM_RSBMEDIA_FIELD_LEGAL_MIME_TYPES_LABEL"
                description="COM_RSBMEDIA_FIELD_LEGAL_MIME_TYPES_DESC"
                />
        <field
                name="upload_mime_illegal"
                class="input-xxlarge"
                type="text"
                size="50"
                default="text/html"
                label="COM_RSBMEDIA_FIELD_ILLEGAL_MIME_TYPES_LABEL"
                description="COM_RSBMEDIA_FIELD_ILLEGAL_MIME_TYPES_DESC"
                />
    </fieldset>
    <fieldset
            name="permissions"
            label="JCONFIG_PERMISSIONS_LABEL"
            description="JCONFIG_PERMISSIONS_DESC"
            >
        <field
                name="rules"
                type="rules"
                label="JCONFIG_PERMISSIONS_LABEL"
                filter="rules"
                validate="rules"
                component="com_rsbmedia"
                section="component"
                />
    </fieldset>
</config>
