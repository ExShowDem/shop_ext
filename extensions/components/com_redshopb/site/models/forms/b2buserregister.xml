<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset addfieldpath="/libraries/redshopb/form/fields">
        <field
                name="name1"
                type="text"
                class="inputbox form-control"
                description="COM_REDSHOPB_B2BUSER_FIELD_NAME_DESC"
                label="COM_REDSHOPB_B2BUSER_FIELD_NAME_LABEL"
                required="true"
        />
        <field
                name="name2"
                type="text"
                class="inputbox form-control"
                description="COM_REDSHOPB_B2BUSER_FIELD_NAME_LAST_DESC"
                label="COM_REDSHOPB_B2BUSER_FIELD_NAME_LAST_LABEL"
        />
        <field
                name="email"
                type="email"
                class="inputbox form-control"
                description="COM_REDSHOPB_B2BUSER_FIELD_EMAIL_DESC"
                label="JGLOBAL_EMAIL"
                validate="email"
                required="true"
        />
        <field
                name="username"
                type="text"
                class="inputbox form-control"
                required="true"
                description="COM_REDSHOPB_B2BUSER_FIELD_USERNAME_DESC"
                label="COM_REDSHOPB_B2BUSER_FIELD_USERNAME_LABEL"
        />

        <field
                name="password"
                type="rbpassword"
                required="true"
                autocomplete="off"
                class="validate-password form-control"
                description="COM_REDSHOPB_B2BUSER_FIELD_PASSWORD_DESC"
                filter="raw"
                label="JGLOBAL_PASSWORD"
                validate="password"
                strengthmeter="true"
        />

        <field
                name="password2"
                type="rbpassword"
                required="true"
                autocomplete="off"
                class="validate-password form-control"
                description="COM_REDSHOPB_B2BUSER_FIELD_PASSWORD2_DESC"
                filter="raw"
                label="COM_REDSHOPB_B2BUSER_FIELD_PASSWORD2_LABEL"
                message="COM_REDSHOPB_MYPROFILE_PASSWORD1_MESSAGE"
                validate="equals"
                field="password"
                strengthmeter="true"
        />
        <field
                name="billing_country_id"
                type="country"
                hideReadOnly="true"
                label="COM_REDSHOPB_COUNTRY_LABEL"
                description="COM_REDSHOPB_COUNTRY_DESC"
                class="validateNeeded form-control"
                required="true"
        >
            <option value="">JOPTION_SELECT_COUNTRY</option>
        </field>
        <field
                name="billing_state_id"
                type="redshopb.list_ajax"
                label="COM_REDSHOPB_COUNTRY_STATE_LABEL"
                description="COM_REDSHOPB_COUNTRY_STATE_DESC"
                formName="b2buserregister"
                model="site:States"
                filter="{ 'filter.state': 1 }"
                completionFilter="filter.search_states"
                dynamicFilters="{'filter.country_id' : '#jform_billing_country_id'}"
                resetWhenDynamicFilterChanged="true"
                property="name"
                minimumInputLength="0"
                ordering="s.name"
                multiple="false"
                required="false"
                allowCreate="false"
                limit="100"
                default=""
                hint="JSELECT"
                class="form-control"
        />
        <field
                name="vat_number"
                type="vies"
                country_field="billing_country_id"
                label="COM_REDSHOPB_VAT_NUMBER_LBL"
                description="COM_REDSHOPB_VAT_NUMBER_DESC"
                class="form-control"
                value=""
        />
        <field
                name="billing_city"
                type="text"
                class="form-control"
                label="COM_REDSHOPB_CITY_LABEL"
                description="COM_REDSHOPB_CITY_DESC"
                required="true"
                maxlength="255"
        />
        <field
                name="billing_zip"
                type="text"
                class="form-control"
                label="COM_REDSHOPB_ZIP_LABEL"
                description="COM_REDSHOPB_ZIP_DESC"
                message="COM_REDSHOPB_ZIP_INVALID"
                required="true"
        />
        <field
                name="billing_address"
                type="text"
                class="form-control"
                label="COM_REDSHOPB_ADDRESS_LABEL"
                description="COM_REDSHOPB_ADDRESS_DESC"
                required="true"
        />
        <field
                name="billing_address2"
                type="text"
                class="form-control"
                label="COM_REDSHOPB_ADDRESS2_LABEL"
                description="COM_REDSHOPB_ADDRESS2_DESC"
        />
        <field
                name="billing_phone"
                type="text"
                class="form-control"
                label="COM_REDSHOPB_ADDRESS_PHONE_LABEL"
                description="COM_REDSHOPB_ADDRESS_PHONE_DESC"
        />

        <field
                name="shipping_country_id"
                type="country"
                class="form-control"
                hideReadOnly="true"
                label="COM_REDSHOPB_COUNTRY_LABEL"
                description="COM_REDSHOPB_COUNTRY_DESC"
                required="true"
        >
            <option value="">JOPTION_SELECT_COUNTRY</option>
        </field>
        <field
                name="shipping_state_id"
                type="redshopb.list_ajax"
                class="form-control"
                label="COM_REDSHOPB_COUNTRY_STATE_LABEL"
                description="COM_REDSHOPB_COUNTRY_STATE_DESC"
                formName="b2buserregister"
                model="site:States"
                filter="{ 'filter.state': 1 }"
                completionFilter="filter.search_states"
                dynamicFilters="{'filter.country_id' : '#jform_shipping_country_id'}"
                resetWhenDynamicFilterChanged="true"
                property="name"
                minimumInputLength="0"
                ordering="s.name"
                multiple="false"
                required="false"
                allowCreate="false"
                limit="100"
                default=""
                hint="JSELECT"
        />
        <field
                name="shipping_city"
                type="text"
                class="form-control"
                label="COM_REDSHOPB_CITY_LABEL"
                description="COM_REDSHOPB_CITY_DESC"
                required="true"
                maxlength="255"
        />
        <field
                name="shipping_zip"
                type="text"
                class="form-control"
                label="COM_REDSHOPB_ZIP_LABEL"
                description="COM_REDSHOPB_ZIP_DESC"
                message="COM_REDSHOPB_ZIP_INVALID"
                required="true"
        />
        <field
                name="shipping_address"
                type="text"
                class="form-control"
                label="COM_REDSHOPB_ADDRESS_LABEL"
                description="COM_REDSHOPB_ADDRESS_DESC"
                required="true"
        />
        <field
                name="shipping_address2"
                type="text"
                class="form-control"
                label="COM_REDSHOPB_ADDRESS2_LABEL"
                description="COM_REDSHOPB_ADDRESS2_DESC"
        />
        <field
                name="shipping_phone"
                type="text"
                class="form-control"
                label="COM_REDSHOPB_ADDRESS_PHONE_LABEL"
                description="COM_REDSHOPB_ADDRESS_PHONE_DESC"
        />
        <field
                name="shipping_name1"
                type="text"
                class="inputbox"
                description="COM_REDSHOPB_B2BUSER_FIELD_NAME_DESC"
                label="COM_REDSHOPB_B2BUSER_FIELD_NAME_LABEL"
        />
        <field
                name="shipping_name2"
                type="text"
                class="inputbox"
                description="COM_REDSHOPB_B2BUSER_FIELD_NAME_LAST_DESC"
                label="COM_REDSHOPB_B2BUSER_FIELD_NAME_LAST_LABEL"
        />
        <field
                name="usebilling"
                type="checkbox"
                value="1"
                label=""
                description=""
                checked="true"
        />
        <field
                name="department_id"
                type="hidden"
                value=""
                readonly="false"
        />
        <field
                name="company_id"
                type="hidden"
                value=""
                readonly="false"
        />
        <field
                name="role_type_id"
                type="hidden"
                value=""
                readonly="true"
        />
        <field
                name="register_type"
                type="radio"
                label="COM_REDSHOPB_B2BUSER_FIELD_REGISTER_TYPE_LABEL"
                description="COM_REDSHOPB_B2BUSER_FIELD_REGISTER_TYPE_DESC"
                class="btn-group"
                default="personal"
        >
            <option value="personal">COM_REDSHOPB_B2BUSER_FIELD_REGISTER_TYPE_OPTION_PERSONAL</option>
            <option value="business">COM_REDSHOPB_B2BUSER_FIELD_REGISTER_TYPE_OPTION_BUSINESS</option>
        </field>
        <field
                name="business_company_name"
                type="text"
                class="form-control"
                label="COM_REDSHOPB_B2BUSER_FIELD_BUSINESS_COMPANY_NAME_LABEL"
                description="COM_REDSHOPB_B2BUSER_FIELD_BUSINESS_COMPANY_NAME_DESC"
                maxlength="255"
        />
        <field
                name="invoice_email"
                type="text"
                class="form-control"
                label="COM_REDSHOPB_COMPANY_INVOICE_EMAIL_LABEL"
                description="COM_REDSHOPB_COMPANY_INVOICE_EMAIL_DESC"
        />
    </fieldset>
</form>
