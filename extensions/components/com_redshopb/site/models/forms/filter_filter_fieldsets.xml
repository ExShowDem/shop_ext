<?xml version="1.0" encoding="UTF-8"?>
<form addfieldpath="/libraries/redshopb/form/fields">
    <fields name="filter" >
        <field
                name="search_filter_fieldsets"
                type="text"
                label="COM_REDCORE_FILTER_SEARCH_DESC"
                placeholder="JSEARCH_FILTER"
                />
        <field
                name="filter_fieldset_state"
                type="rpublished"
                label="JOPTION_SELECT_PUBLISHED"
                description="JOPTION_SELECT_PUBLISHED_DESC"
                filter="0,1"
                class="chosen"
                onchange="this.form.submit();"
                >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>
    </fields>
    <fields name="list">
        <fieldset>
            <field
                    name="filter_fieldset_limit"
                    type="rlimitbox"
                    class="inputbox input-mini chzn"
                    default="15"
                    label="JGLOBAL_ORDERING_LIST_LIMIT"
                    description="JGLOBAL_ORDERING_LIST_LIMIT_DESC"
                    onchange="this.form.submit();"
                    />
        </fieldset>
    </fields>
</form>