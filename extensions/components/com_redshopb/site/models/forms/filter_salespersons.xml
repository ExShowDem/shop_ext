<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldpath="/libraries/redshopb/form/fields">
        <field
                name="search_salespersons"
                type="text"
                label="COM_REDCORE_FILTER_SEARCH_DESC"
                placeholder="JSEARCH_FILTER"
                />
        <field
                name="salesperson_block"
                type="list"
                label="COM_REDSHOPB_STATE_LABEL"
                description="COM_REDSHOPB_STATE_DESC"
                onchange="this.form.submit();"
                >
            <option value="">COM_REDSHOPB_SELECT_STATUS</option>
            <option value="0">JENABLED</option>
            <option value="1">JBLOCKED</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="salesperson_limit"
                type="rlimitbox"
                class="inputbox input-mini chzn"
                default="25"
                label="JGLOBAL_ORDERING_LIST_LIMIT"
                description="JGLOBAL_ORDERING_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                />
    </fields>
</form>
