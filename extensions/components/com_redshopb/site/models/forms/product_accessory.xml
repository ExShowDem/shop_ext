<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset addfieldpath="/libraries/redshopb/form/fields">
        <field
                name="id"
                type="hidden"
                default="0"
                label="COM_REDSHOPB_ID_LABEL"
                description="COM_REDSHOPB_ID_DESC"
                readonly="true"
                />
        <field
                name="state"
                type="radio"
                label="COM_REDSHOPB_STATE_LABEL"
                description="COM_REDSHOPB_STATE_DESC"
                required="true"
                class="btn-group"
                default="1"
                >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
        <field
                name="hide_on_collection"
                type="radio"
                label="COM_REDSHOPB_ACCESSORIES_HIDE_ON_COLLECTION"
                description="COM_REDSHOPB_ACCESSORIES_HIDE_ON_COLLECTION_DESC"
                default="0"
                filter="intval"
                class="btn-group"
                >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="selection"
                type="list"
                label="COM_REDSHOPB_ACCESSORIES_SELECTION"
                description="COM_REDSHOPB_ACCESSORIES_SELECTION_DESC"
                default="require"
                >
            <option value="require">COM_REDSHOPB_ACCESSORIES_SELECTION_REQUIRE</option>
            <option value="proposed">COM_REDSHOPB_ACCESSORIES_SELECTION_PROPOSED</option>
            <option value="optional">COM_REDSHOPB_ACCESSORIES_SELECTION_OPTIONAL</option>
        </field>
        <field
                name="price"
                type="text"
                label="COM_REDSHOPB_ACCESSORIES_PRICE"
                description="COM_REDSHOPB_ACCESSORIES_PRICE_DESC"
                maxlength="255"
                />
        <field
                name="description"
                type="textarea"
                label="COM_REDSHOPB_ACCESSORIES_DESCRIPTION"
                description="COM_REDSHOPB_ACCESSORIES_DESCRIPTION_DESC"
                />
				<field
                name="product_id"
                type="product"
                label="COM_REDSHOPB_PRODUCT"
                description="COM_REDSHOPB_PRODUCT_DESC"
                required="true"
                state="1"
                discontinued="0"
                />
				<field
                name="accessory_product_id"
                type="product"
                label="COM_REDSHOPB_ACCESSORY_PRODUCT"
                description="COM_REDSHOPB_ACCESSORY_PRODUCT_DESC"
                required="true"
                state="1"
                discontinued="0"
                />
    </fieldset>
</form>
