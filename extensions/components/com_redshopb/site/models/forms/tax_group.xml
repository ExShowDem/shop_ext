<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset addfieldpath="/libraries/redshopb/form/fields">
        <field
                name="id"
                type="text"
                default="0"
                label="JGLOBAL_FIELD_ID_LABEL"
                description="JGLOBAL_FIELD_ID_DESC"
                class="readonly"
                readonly="true"
                />
        <field
                name="name"
                type="redtext"
                label="COM_REDSHOPB_NAME"
                description="COM_REDSHOPB_TAX_GROUP_NAME_DESC"
                required="true"
                maxlength="255"
                />
        <field
                name="company_id"
                type="company"
                label="COM_REDSHOPB_COMPANY_LABEL"
                description="COM_REDSHOPB_COMPANY_DESC"
        />
        <field
                name="state"
                type="radio"
                label="COM_REDSHOPB_STATE_LABEL"
                description="COM_REDSHOPB_STATE_DESC"
                class="btn-group"
                default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
        <field
            name="taxes"
            type="tax"
            label="COM_REDSHOPB_TAX_GROUP_TAXES_LABEL"
            description="COM_REDSHOPB_TAX_GROUP_TAXES_DESC"
            multiple="true"/>
    </fieldset>
</form>
