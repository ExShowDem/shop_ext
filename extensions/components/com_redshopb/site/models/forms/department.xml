<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/libraries/redshopb/form/fields">
    <fieldset name="standard">
        <field
                name="id"
                type="hidden"
                default="0"
                label="COM_REDSHOPB_ID_LABEL"
                description="COM_REDSHOPB_ID_DESC"
                readonly="true"
                />
		<field
				name="parent_id"
				type="departmentparent"
				label="COM_REDSHOPB_DEPARTMENT_PARENT_LBL"
				description="COM_REDSHOPB_DEPARTMENT_PARENT_DESC"
				/>
		<field
				name="department_number"
				type="text"
				label="COM_REDSHOPB_DEPARTMENT_NUMBER_LBL"
				description="COM_REDSHOPB_DEPARTMENT_NUMBER_DESC"
				/>
	    <field
			    name="requisition"
			    type="text"
			    label="COM_REDSHOPB_ORDER_REQUISITION"
			    description="COM_REDSHOPB_REQUISITION_AUTO_DESC"
			    />
        <field
                name="name"
                type="text"
                label="COM_REDSHOPB_DEPARTMENT_NAME_LABEL"
                description="COM_REDSHOPB_DEPARTMENT_NAME_DESC"
                required="true"
                maxlength="255"
                />
		<field
				name="name2"
				type="text"
				label="COM_REDSHOPB_DEPARTMENT_NAME2_LABEL"
				description="COM_REDSHOPB_DEPARTMENT_NAME2_DESC"
				maxlength="255"
				/>
        <field
                name="company_id"
                type="company"
                label="COM_REDSHOPB_COMPANY_LABEL"
                description="COM_REDSHOPB_COMPANY_DESC"
                required="true"
                onchange="ajaxsetDepartment(this);"
                >
            <option value="">JOPTION_SELECT_COMPANY</option>
        </field>
        <field
                name="country_id"
                type="country"
                label="COM_REDSHOPB_COUNTRY_LABEL"
                description="COM_REDSHOPB_COUNTRY_DESC"
                >
            <option value="">JOPTION_SELECT_COUNTRY</option>
        </field>
        <field
                name="city"
                type="text"
                label="COM_REDSHOPB_CITY_LABEL"
                description="COM_REDSHOPB_CITY_DESC"
                maxlength="255"
                />
        <field
                name="zip"
                type="text"
                label="COM_REDSHOPB_ZIP_LABEL"
                description="COM_REDSHOPB_ZIP_DESC"
                message="COM_REDSHOPB_ZIP_INVALID"
                />
        <field
                name="address"
                type="text"
                label="COM_REDSHOPB_ADDRESS_LABEL"
                description="COM_REDSHOPB_ADDRESS_DESC"
                />
		<field
				name="address2"
				type="text"
				label="COM_REDSHOPB_ADDRESS2_LABEL"
				description="COM_REDSHOPB_ADDRESS2_DESC"
				/>
		<field
				name="state"
				type="radio"
				label="COM_REDSHOPB_STATE_LABEL"
				description="COM_REDSHOPB_STATE_DESC"
				default="0"
				class="btn-group"
				>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
        <field
                name="phone"
                type="text"
                label="COM_REDSHOPB_ADDRESS_PHONE_LABEL"
                description="COM_REDSHOPB_ADDRESS_PHONE_DESC"
                />
        <field
                name="imageFileUpload"
                type="file"
                preview="tooltip"
                label="COM_REDSHOPB_DEPARTMENT_IMAGE_LABEL"
                description="COM_REDSHOPB_DEPARTMENT_IMAGE_DESC"
                accept="image/jpeg,image/png"/>
        <field
                name="image"
                type="hidden"/>
        <field
                name="deleteImage"
                type="checkbox"
                value="1"
                label="COM_REDSHOPB_WASH_CARE_SPEC_DELETE_IMAGE_LABEL"
                description="COM_REDSHOPB_WASH_CARE_SPEC_DELETE_IMAGE_DESC"/>
		<field
				name="state_id"
				type="redshopb.list_ajax"
				label="COM_REDSHOPB_COUNTRY_STATE_LABEL"
				description="COM_REDSHOPB_COUNTRY_STATE_DESC"
				formName="department"
				model="site:States"
				filter="{ 'filter.state': 1 }"
				completionFilter="filter.search_states"
				dynamicFilters="{'filter.country_id' : '#jform_country_id'}"
				resetWhenDynamicFilterChanged="true"
				property="name"
				minimumInputLength="0"
				ordering="s.name"
				multiple="false"
				required="false"
				allowCreate="false"
				limit="100"
				default=""
				hint="JSELECT"
		/>
    </fieldset>
    <fieldset name="hidden">
        <field name="image_file" type="hidden"/>
    </fieldset>
</form>
