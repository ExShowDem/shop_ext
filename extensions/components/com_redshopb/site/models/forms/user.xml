<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/libraries/redshopb/form/fields">
		<field
				name="id"
				type="hidden"
				default="0"
				label="COM_REDSHOPB_ID_LABEL"
				description="COM_REDSHOPB_ID_DESC"
				readonly="true"
				/>
		<field
				name="name"
				type="text"
				disabled="true"
				class="inputbox"
				description="COM_REDSHOPB_USER_FIELD_FULL_NAME_DESC"
				label="COM_REDSHOPB_USER_FIELD_FULL_NAME_LABEL"
				/>
		<field
				name="printed_name"
				type="text"
				class="inputbox"
				description="COM_REDSHOPB_USER_PRINTED_NAME_DESC"
				label="COM_REDSHOPB_USER_PRINTED_NAME_LABEL"
				/>
		<field
				name="employee_number"
				type="text"
				disabled="false"
				label="COM_REDSHOPB_USER_NUMBER_LABEL"
				description="COM_REDSHOPB_USER_NUMBER_DESC"
				/>
		<field
				name="name1"
				type="text"
				class="inputbox"
				description="COM_REDSHOPB_USER_FIELD_NAME_DESC"
				label="COM_REDSHOPB_USER_FIELD_NAME_LABEL"
				required="true"
				/>
		<field
				name="name2"
				type="text"
				class="inputbox"
				description="COM_REDSHOPB_USER_FIELD_NAME2_DESC"
				label="COM_REDSHOPB_USER_FIELD_NAME2_LABEL"
				/>
		<field
				name="username"
				type="text"
				class="inputbox"
				description="COM_REDSHOPB_USER_FIELD_USERNAME_DESC"
				label="COM_REDSHOPB_USER_FIELD_USERNAME_LABEL"
				/>

		<field
				name="password"
				type="password"
				autocomplete="off"
				class="inputbox validate-password"
				description="COM_REDSHOPB_USER_FIELD_PASSWORD_DESC"
				filter="raw"
				label="JGLOBAL_PASSWORD"
				/>

		<field
				name="password2"
				type="password"
				autocomplete="off"
				class="inputbox validate-password"
				description="COM_REDSHOPB_USER_FIELD_PASSWORD2_DESC"
				filter="raw"
				label="COM_REDSHOPB_USER_FIELD_PASSWORD2_LABEL"
				validate="equals"
				field="password2"
				/>

		<field
				name="email"
				type="email"
				class="inputbox"
				description="COM_REDSHOPB_USER_FIELD_EMAIL_DESC"
				label="JGLOBAL_EMAIL"
				validate="email"
				required="true"
				/>
		<field
				name="use_company_email"
				type="radio"
				class="btn-group"
				description="COM_REDSHOPB_USER_GENERATE_RANDOM_EMAIL_DESC"
				label="COM_REDSHOPB_USER_GENERATE_RANDOM_EMAIL_LABEL"
				default="0"
				>
			<option value="1" onclick="jOnCompanyEmailSet(1)">JNO</option>
			<option value="0" onclick="jOnCompanyEmailSet(0)">JYES</option>
		</field>
		<field
				name="send_email"
				type="radio"
				class="btn-group"
				description="COM_REDSHOPB_USER_SEND_EMAIL_DESC"
				label="COM_REDSHOPB_USER_SEND_EMAIL_LABEL"
				default="1"
				>
			<option value="0" onclick="">JNO</option>
			<option value="1" onclick="">JYES</option>
		</field>
		<field
				name="userStatus"
				type="radio"
				class="btn-group"
				description="COM_REDSHOPB_SELECT_STATUS"
				label="COM_REDSHOPB_USER_ACTIVATION"
				default="1"
				>
			<option value="0">JBLOCKED</option>
			<option value="1">JENABLED</option>
		</field>
		<field
				name="company_id"
				type="company"
				label="COM_REDSHOPB_COMPANY_LABEL"
				description="COM_REDSHOPB_COMPANY_DESC"
		        required="true"
		        onchange="jOnCompanySet(jQuery(this))"
				>
			<option value="">JOPTION_SELECT_COMPANY</option>
		</field>
		<field
				name="department_id"
				type="department"
				label="COM_REDSHOPB_DEPARTMENT_LABEL"
				description="COM_REDSHOPB_DEPARTMENT_DESC"
				>
			<option value="">JOPTION_SELECT_DEPARTMENT</option>
		</field>
		<field
				name="registerDate"
				type="text"
				label="COM_REDSHOPB_MEMBER_SINCE_LBL"
				readonly="true"
				/>
        <field
                name="useCompanyAddress"
                type="radio"
                class="btn-group"
                default="0"
                description="COM_REDSHOPB_USER_USE_COMPANY_ADDRESS_DESC"
                label="COM_REDSHOPB_USER_USE_COMPANY_ADDRESS_LABEL"
		        >
	        <option value="0" onclick="jOnCompanyAddressSet(false)">JNO</option>
	        <option value="1" onclick="jOnCompanyAddressSet(true)">JYES</option>
        </field>
		<field
				name="phone"
				type="text"
				label="COM_REDSHOPB_PHONE_LABEL"
				description="COM_REDSHOPB_PHONE_DESC"
				/>
		<field
				name="cell_phone"
				type="text"
				label="COM_REDSHOPB_CELL_PHONE_LABEL"
				description="COM_REDSHOPB_CELL_PHONE_DESC"
				/>
		<field
				name="country_id"
				type="country"
				label="COM_REDSHOPB_COUNTRY_LABEL"
				description="COM_REDSHOPB_COUNTRY_DESC"
				>
			<option value="">JOPTION_SELECT_COUNTRY</option>
		</field>
		<field
				name="state_id"
				type="redshopb.list_ajax"
				label="COM_REDSHOPB_COUNTRY_STATE_LABEL"
				description="COM_REDSHOPB_COUNTRY_STATE_DESC"
				formName="user"
				model="site:States"
				filter="{ 'filter.state': 1 }"
				completionFilter="filter.search_states"
				dynamicFilters="{'filter.country_id' : '#jform_country_id'}"
				resetWhenDynamicFilterChanged="true"
				property="name"
				minimumInputLength="0"
				ordering="s.name"
				multiple="false"
				required="false"
				allowCreate="false"
				limit="100"
				default=""
				hint="JSELECT"
		/>
		<field
				name="city"
				type="text"
				label="COM_REDSHOPB_CITY_LABEL"
				description="COM_REDSHOPB_CITY_DESC"
				/>
		<field
				name="zip"
				type="text"
				label="COM_REDSHOPB_ZIP_LABEL"
				description="COM_REDSHOPB_ZIP_DESC"
				message="COM_REDSHOPB_ZIP_INVALID"
				/>
		<field
				name="address_phone"
				type="text"
				label="COM_REDSHOPB_ADDRESS_PHONE_LABEL"
				description="COM_REDSHOPB_ADDRESS_PHONE_DESC"
				/>
		<field
				name="address_name"
				type="text"
				label="COM_REDSHOPB_NAME"
				description="COM_REDSHOPB_ADDRESS_NAME_DESC"
				maxlength="255"
				/>
		<field
				name="address_name2"
				type="text"
				label="COM_REDSHOPB_ADDRESS_NAME2_LABEL"
				description="COM_REDSHOPB_ADDRESS_NAME2_DESC"
				maxlength="255"
				/>
		<field
				name="address"
				type="text"
				label="COM_REDSHOPB_ADDRESS_LABEL"
				description="COM_REDSHOPB_ADDRESS_DESC"
				/>
		<field
				name="address2"
				type="text"
				label="COM_REDSHOPB_ADDRESS2_LABEL"
				description="COM_REDSHOPB_ADDRESS2_DESC"
				/>
		<field
				name="role_type_id"
				type="roletype"
				label="COM_REDSHOPB_ROLE_LABEL"
				description="COM_REDSHOPB_ROLE_DESC"
				required="true"
				onchange="jOnRoleChangeSet()"
				>
			<option value="">JOPTION_SELECT_ROLE</option>
		</field>
		<field
				name="start_date"
				type="rdatepicker"
				label="COM_REDSHOPB_STARTTIME"
				description="COM_REDSHOPB_STARTTIME"
				onchange=""
				/>
		<field
				name="end_date"
				type="rdatepicker"
				label="COM_REDSHOPB_ENDTIME"
				description="COM_REDSHOPB_ENDTIME"
				onchange=""
				/>
		<field
				name="imageFileUpload"
				type="file"
				preview="tooltip"
				label="COM_REDSHOPB_USER_IMAGE_LABEL"
				description="COM_REDSHOPB_USER_IMAGE_DESC"
				accept="image/jpeg,image/png"/>
		<field
				name="image"
				type="hidden"/>
		<field
				name="deleteImage"
				type="checkbox"
				value="1"
				label="COM_REDSHOPB_USER_DELETE_IMAGE_LABEL"
				description="COM_REDSHOPB_USER_DELETE_IMAGE_DESC"/>
	</fieldset>
	<fieldset name="hidden">
		<field name="image_file" type="hidden"/>
		<field name="extrafields" type="hidden"/>
		<field name="joomla_usergroups" type="hidden"/>
	</fieldset>
</form>
