<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/libraries/redshopb/form/fields">
		<field
				name="id"
				type="hidden"
				default="0"
				label="COM_REDSHOPB_ID_LABEL"
				description="COM_REDSHOPB_ID_DESC"
				readonly="true"
		/>
		<field
				name="product_id"
				type="hidden"
				label="COM_REDSHOPB_PRODUCT_LABEL"
				description="COM_REDSHOPB_PRODUCT_DESC"
				required="true"
				>
		</field>
		<field
				name="main_attribute_value_id"
				type="AttributeFlatDisplayValues"
				dependsOnField="product_id"
				label="COM_REDSHOPB_PRODUCT_DESCRIPTION_FLAT_ATTRIBUTE_LABEL"
				description="COM_REDSHOPB_PRODUCT_DESCRIPTION_FLAT_ATTRIBUTE_DESC"
				>
			<option value="">JOPTION_PRODUCT_GENERAL_DESCRIPTION</option>
		</field>
		<field
				name="description_intro"
				type="multipleeditor"
				label="COM_REDSHOPB_PRODUCT_DESCRIPTION_INTRO_LABEL"
				description="COM_REDSHOPB_PRODUCT_DESCRIPTION_INTRO_DESC"
				cols="30"
				class="inputbox"
				filter="safehtml"
				/>
		<field
				name="description"
				type="multipleeditor"
				label="COM_REDSHOPB_PRODUCT_DESCRIPTION_LABEL"
				description="COM_REDSHOPB_PRODUCT_DESCRIPTION_DESC"
				cols="30"
				class="inputbox"
				filter="safehtml"
				required="true"
                hide="article,image,pagebreak"
				/>
	</fieldset>
	<fieldset name="sync">
		<field
				name="sync_related_id"
				type="text"
				label="COM_REDSHOPB_SYNC_RELATED_ID_LABEL"
				description="COM_REDSHOPB_SYNC_RELATED_ID_DESC"
				maxlength="255"
		/>
	</fieldset>
</form>
