<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldpath="/libraries/redshopb/form/fields">
        <field
                name="search_myfavoritelists"
                type="text"
                label="COM_REDCORE_FILTER_SEARCH_DESC"
                placeholder="JSEARCH_FILTER"
        />
        <field
                name="visible_others"
                type="list"
                default="NONE"
                label="COM_REDSHOPB_MYFAVORITELIST_VISIBLE_OTHERS"
                description="COM_REDSHOPB_MYFAVORITELIST_VISIBLE_OTHERS_DESC"
                onchange="this.form.submit();"
        >
            <option value="NONE">COM_REDSHOPB_MYFAVORITELIST_VISIBLE_OTHERS</option>
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="company_id"
                type="company"
                label="COM_REDSHOPB_COMPANY_LABEL"
                onchange="this.form.submit();"
                hideDefault="true"
        >
            <option value="">JOPTION_SELECT_COMPANY</option>
        </field>
        <field
                name="department_id"
                type="department"
                label="COM_REDSHOPB_DEPARTMENT_LABEL"
                onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_DEPARTMENT</option>
        </field>
        <field
                name="product_id"
                type="product"
                label="COM_REDSHOPB_PRODUCT"
                description="COM_REDSHOPB_ATTRIBUTE_PRODUCT_DESC"
                state="1"
                restriction="none"
                showSku="1"
                onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PRODUCT</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="myfavoritelist_limit"
                type="rlimitbox"
                class="inputbox input-mini chzn"
                default="25"
                label="JGLOBAL_ORDERING_LIST_LIMIT"
                description="JGLOBAL_ORDERING_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
        />
    </fields>
</form>
