<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset addfieldpath="/libraries/redshopb/form/fields">
        <field
                name="id"
                type="text"
                default="0"
                label="JGLOBAL_FIELD_ID_LABEL"
                description="JGLOBAL_FIELD_ID_DESC"
                class="readonly"
                readonly="true"
                />
        <field
                name="name"
                type="redtext"
                label="COM_REDSHOPB_NAME"
                description="COM_REDSHOPB_CURRENCY_NAME_DESC"
                required="true"
                maxlength="255"
                />
        <field
                name="alpha3"
                type="redtext"
                label="COM_REDSHOPB_CURRENCY_ALPHA3_LBL"
                description="COM_REDSHOPB_CURRENCY_ALPHA3_DESC"
                required="true"
                />
        <field
                name="numeric"
                type="redtext"
                filter="integer"
                label="COM_REDSHOPB_CURRENCY_NUMERIC_LBL"
                description="COM_REDSHOPB_CURRENCY_NUMERIC_DESC"
                required="true"
                />
        <field
                name="state"
                type="radio"
                label="COM_REDSHOPB_STATE_LABEL"
                description="COM_REDSHOPB_STATE_DESC"
                required="true"
                class="btn-group"
                default="1"
                >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
        <field
                name="symbol"
                type="redtext"
                label="COM_REDSHOPB_CURRENCY_SYMBOL_LBL"
                description="COM_REDSHOPB_CURRENCY_SYMBOL_DESC"
                required="true"
                />
        <field
                name="decimals"
                type="redtext"
                label="COM_REDSHOPB_CURRENCY_DECIMALS_LBL"
                placeholder="COM_REDSHOPB_CURRENCY_DECIMALS_DESC"
                description="COM_REDSHOPB_CURRENCY_DECIMALS_DESC"
                filter="integer"
                required="true"
                default="2"
                size="5"
                />
        <field
                name="symbol_position"
                type="list"
                label="COM_REDSHOPB_CURRENCY_SYMBOL_POSITION_LBL"
                description="COM_REDSHOPB_CURRENCY_SYMBOL_POSITION_DESC"
                filter="integer"
                required="true"
                default="1"
                size="5"
                >
            <option value="0">COM_REDSHOPB_CURRENCY_SYMBOL_POSITION_BEFORE</option>
            <option value="1">COM_REDSHOPB_CURRENCY_SYMBOL_POSITION_AFTER</option>
        </field>
        <field
                name="blank_space"
                type="radio"
                class="btn-group"
                default="1"
                label="COM_REDSHOPB_CURRENCY_BLANK_SPACE_LBL"
                description="COM_REDSHOPB_CURRENCY_BLANK_SPACE_DESC"
                >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field
                name="decimal_separator"
                type="text"
                default=","
                label="COM_REDSHOPB_CURRENCY_DECIMAL_SEPARATOR_LBL"
                description="COM_REDSHOPB_CURRENCY_DECIMAL_SEPARATOR_DESC"
                size="2"
                />
        <field
                name="thousands_separator"
                type="text"
                label="COM_REDSHOPB_CURRENCY_THOUSANDS_SEPARATOR_LBL"
                description="COM_REDSHOPB_CURRENCY_THOUSANDS_SEPARATOR_DESC"
                size="2"
                />
    </fieldset>
</form>
