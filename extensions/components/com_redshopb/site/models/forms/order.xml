				label="COM_REDSHOPB_ORDER_CREATED_USER"
				description="COM_REDSHOPB_ORDER_CREATED_USER_DESC"
				readonly="true"
				disabled="true"
				/>

		<field
				name="created_date"
				type="rdatepicker"
				filter="server_utc"
				showTime="true"
				dateFormat="yy-mm-dd"
				class="js-to-inline-calendar"
				readonly="true"
				disabled="true"
				label="COM_REDSHOPB_ORDER_DATE"
				description="COM_REDSHOPB_ORDER_DATE_DESC"

