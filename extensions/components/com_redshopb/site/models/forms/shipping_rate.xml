<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/libraries/redshopb/form/fields">
		<field
				name="id"
				type="hidden"
				default="0"
				label="COM_REDSHOPB_ID_LABEL"
				description="COM_REDSHOPB_ID_DESC"
				readonly="true"
				/>
        <field
                name="shipping_configuration_id"
                type="shippingmethods"
                label="COM_REDSHOPB_SHIPPING_RATE_METHOD_LABEL"
                description="COM_REDSHOPB_SHIPPING_RATE_METHOD_DESC"
                filterShippers="true"
                required="true"
                />
		<field
				name="name"
				type="text"
				label="COM_REDSHOPB_NAME"
				description="COM_REDSHOPB_NAME"
				required="true"
				maxlength="255"
				/>
		<field
				name="countries"
				type="country"
				label="COM_REDSHOPB_COUNTRY_LABEL"
				description="COM_REDSHOPB_COUNTRY_DESC"
				multiple="true"
				>
        </field>
        <field
                name="zip_start"
                type="text"
                label="COM_REDSHOPB_SHIPPING_RATE_ZIP_START_LABEL"
                description="COM_REDSHOPB_SHIPPING_RATE_ZIP_START_DESC"
                default=""
                />
        <field
                name="zip_end"
                type="text"
                label="COM_REDSHOPB_SHIPPING_RATE_ZIP_END_LABEL"
                description="COM_REDSHOPB_SHIPPING_RATE_ZIP_END_DESC"
                default=""
                />
        <field
                name="weight_start"
                type="text"
                filter="float"
                label="COM_REDSHOPB_SHIPPING_RATE_WEIGHT_START_LABEL"
                description="COM_REDSHOPB_SHIPPING_RATE_WEIGHT_START_DESC"
                maxlength="255"
                />
        <field
                name="weight_end"
                type="text"
                filter="float"
                label="COM_REDSHOPB_SHIPPING_RATE_WEIGHT_END_LABEL"
                description="COM_REDSHOPB_SHIPPING_RATE_WEIGHT_END_DESC"
                maxlength="255"
                />
        <field
                name="volume_start"
                type="text"
                filter="float"
                label="COM_REDSHOPB_SHIPPING_RATE_VOLUME_START_LABEL"
                description="COM_REDSHOPB_SHIPPING_RATE_VOLUME_START_DESC"
                maxlength="255"
                />
        <field
                name="volume_end"
                type="text"
                filter="float"
                label="COM_REDSHOPB_SHIPPING_RATE_VOLUME_END_LABEL"
                description="COM_REDSHOPB_SHIPPING_RATE_VOLUME_END_DESC"
                maxlength="255"
                />
        <field
                name="length_start"
                type="text"
                filter="float"
                label="COM_REDSHOPB_SHIPPING_RATE_LENGTH_START_LABEL"
                description="COM_REDSHOPB_SHIPPING_RATE_LENGTH_START_DESC"
                maxlength="255"
                />
        <field
                name="length_end"
                type="text"
                filter="float"
                label="COM_REDSHOPB_SHIPPING_RATE_LENGTH_END_LABEL"
                description="COM_REDSHOPB_SHIPPING_RATE_LENGTH_END_DESC"
                maxlength="255"
                />
        <field
                name="width_start"
                type="text"
                filter="float"
                label="COM_REDSHOPB_SHIPPING_RATE_WIDTH_START_LABEL"
                description="COM_REDSHOPB_SHIPPING_RATE_WIDTH_START_DESC"
                maxlength="255"
                />
        <field
                name="width_end"
                type="text"
                filter="float"
                label="COM_REDSHOPB_SHIPPING_RATE_WIDTH_END_LABEL"
                description="COM_REDSHOPB_SHIPPING_RATE_WIDTH_END_DESC"
                maxlength="255"
                />
        <field
                name="height_start"
                type="text"
                filter="float"
                label="COM_REDSHOPB_SHIPPING_RATE_HEIGHT_START_LABEL"
                description="COM_REDSHOPB_SHIPPING_RATE_HEIGHT_START_DESC"
                maxlength="255"
                />
        <field
                name="height_end"
                type="text"
                filter="float"
                label="COM_REDSHOPB_SHIPPING_RATE_HEIGHT_END_LABEL"
                description="COM_REDSHOPB_SHIPPING_RATE_HEIGHT_END_DESC"
                maxlength="255"
                />
        <field
                name="order_total_start"
                type="text"
                filter="float"
                label="COM_REDSHOPB_SHIPPING_RATE_ORDER_TOTAL_START_LABEL"
                description="COM_REDSHOPB_SHIPPING_RATE_ORDER_TOTAL_START_DESC"
                maxlength="255"
                />
        <field
                name="order_total_end"
                type="text"
                filter="float"
                label="COM_REDSHOPB_SHIPPING_RATE_ORDER_TOTAL_END_LABEL"
                description="COM_REDSHOPB_SHIPPING_RATE_ORDER_TOTAL_END_DESC"
                maxlength="255"
                />
		<field
			name="on_product"
			type="redshopb.list_ajax"
			label="COM_REDSHOPB_SHIPPING_RATE_ON_PRODUCT_LABEL"
			description="COM_REDSHOPB_SHIPPING_RATE_ON_PRODUCT_DESC"
			formName="shipping_rate"
			model="site:Products"
			filter="{ 'filter.state': 1, 'filter.discontinued': 0 }"
			completionFilter="filter.search"
			property="name"
			ordering="p.name"
			multiple="true"
			limit="10"
			hint="JSELECT"
		/>
        <field
                name="on_product_discount_group"
                type="redshopb.list_ajax"
                label="COM_REDSHOPB_SHIPPING_RATE_ON_PRODUCT_DISCOUNT_GROUP_LABEL"
                description="COM_REDSHOPB_SHIPPING_RATE_ON_PRODUCT_DISCOUNT_GROUP_DESC"
                formName="shipping_rate"
                model="site:Product_Discount_Groups"
                filter="{ 'filter.state': 1, 'filter.discontinued': 0 }"
                completionFilter="filter.search"
                property="name"
                ordering="pdg.name"
                multiple="true"
                limit="10"
                hint="JSELECT"
        />
        <field
                name="on_category"
                type="categories"
                label="COM_REDSHOPB_SHIPPING_RATE_ON_CATEGORY_LABEL"
                description="COM_REDSHOPB_SHIPPING_RATE_ON_CATEGORY_DESC"
                multiple="true"
                restriction="parents"
                />
        <field
                name="priority"
                type="text"
                validate="integer"
                label="COM_REDSHOPB_SHIPPING_RATE_PRIORITY_LABEL"
                description="COM_REDSHOPB_SHIPPING_RATE_PRIORITY_DESC"
                default="0"
                />
        <field
                name="price"
                type="text"
                filter="float"
                label="COM_REDSHOPB_SHIPPING_RATE_PRICE_LABEL"
                description="COM_REDSHOPB_SHIPPING_RATE_PRICE_DESC"
                default=""
                />
        <field
                name="shipping_location_info"
                type="multipleeditor"
                label="COM_REDSHOPB_SHIPPING_RATE_SHIPPING_LOCATION_INFO_LABEL"
                description="COM_REDSHOPB_SHIPPING_RATE_SHIPPING_LOCATION_INFO_DESC"
                cols="100"
                class="inputbox"
                filter="safehtml"
                buttons="true"
                hide="readmore,pagebreak,image"
                />
        <field
                name="state"
                type="radio"
                label="COM_REDSHOPB_STATE_LABEL"
                description="COM_REDSHOPB_STATE_DESC"
                required="true"
                class="btn-group"
                default="1"
                >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
	</fieldset>
</form>
