<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldpath="/libraries/redshopb/form/fields">
        <field
                name="search_user_multi_companies"
                type="text"
                label="COM_REDCORE_FILTER_SEARCH_DESC"
                placeholder="JSEARCH_FILTER"
                onchange="this.form.submit();"
        />
        <field
                name="company_id"
                type="company"
                label="COM_REDSHOPB_STOCKROOMS_FILTER_COMPANY"
                onchange="this.form.submit();"
                nullValue='null'
                >
            <option value="">JOPTION_SELECT_COMPANY</option>
        </field>
        <field
                name="role_id"
                type="roletype"
                label="COM_REDSHOPB_ROLE_LABEL"
                onchange="this.form.submit();"
                nullValue='null'
        >
            <option value="">JOPTION_SELECT_ROLE</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="user_multi_company_limit"
                type="rlimitbox"
                class="inputbox input-mini chzn"
                default="25"
                label="JGLOBAL_ORDERING_LIST_LIMIT"
                description="JGLOBAL_ORDERING_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                />
    </fields>
</form>
