<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset addfieldpath="/libraries/redshopb/form/fields">
		<field
				name="id"
				type="hidden"
				default="0"
				label="COM_REDSHOPB_ID_LABEL"
				description="COM_REDSHOPB_ID_DESC"
				readonly="true"
				/>
		<field
				name="type"
				type="addresstype"
				separateTypes="true"
				label="COM_REDSHOPB_ADDRESS_TYPE_LABEL"
				description="COM_REDSHOPB_ADDRESS_TYPE_DESC"
				class="chosen">
		</field>
		<field
				name="customer_id"
				type="text"
				/>
		<field
				name="customer_type"
				type="list"
				label="COM_REDSHOPB_ADDRESS_CUSTOMER_TYPE"
				description="COM_REDSHOPB_ADDRESS_CUSTOMER_TYPE"
				class="chosen"
				required="true"
				>
			<option value="">COM_REDSHOPB_ORDER_SELECT_CUSTOMER_TYPE</option>
			<option value="employee">COM_REDSHOPB_EMPLOYEE</option>
			<option value="department">COM_REDSHOPB_DEPARTMENT</option>
			<option value="company">COM_REDSHOPB_COMPANY</option>
		</field>
		<field
				name="employee_customer_id"
				type="rsbuser"
				label="COM_REDSHOPB_ADDRESS_CUSTOMER_NAME"
				description="COM_REDSHOPB_ADDRESS_CUSTOMER_NAME"
				class="chosen"
				required="true"
				permission="manage"
				>
			<option value="">JSELECT</option>
		</field>
		<field
				name="department_customer_id"
				type="department"
				label="COM_REDSHOPB_ADDRESS_CUSTOMER_NAME"
				description="COM_REDSHOPB_ADDRESS_CUSTOMER_NAME"
				class="chosen"
				required="true"
				disableCompanyFilter="true"
				permission="manage"
				>
			<option value="">JSELECT</option>
		</field>
		<field
				name="company_customer_id"
				type="company"
				label="COM_REDSHOPB_ADDRESS_CUSTOMER_NAME"
				description="COM_REDSHOPB_ADDRESS_CUSTOMER_NAME"
				class="chosen"
				required="true"
				permission="manage"
				>
			<option value="">JSELECT</option>
		</field>
		<field
				name="name"
				type="text"
				label="COM_REDSHOPB_ADDRESS_NAME"
				description="COM_REDSHOPB_ADDRESS_NAME_DESC"
				required="true"
				maxlength="255"
				/>
		<field
				name="name2"
				type="text"
				label="COM_REDSHOPB_ADDRESS_NAME2_LABEL"
				description="COM_REDSHOPB_ADDRESS_NAME2_DESC"
				maxlength="255"
				/>
		<field
				name="country_id"
				type="country"
				label="COM_REDSHOPB_COUNTRY_LABEL"
				description="COM_REDSHOPB_COUNTRY_DESC"
				required="true"
				>
			<option value="">JOPTION_SELECT_COUNTRY</option>
		</field>
		<field
				name="city"
				type="text"
				label="COM_REDSHOPB_CITY_LABEL"
				description="COM_REDSHOPB_CITY_DESC"
				required="true"
				maxlength="255"
				/>
		<field
				name="zip"
				type="text"
				label="COM_REDSHOPB_ZIP_LABEL"
				description="COM_REDSHOPB_ZIP_DESC"
				message="COM_REDSHOPB_ZIP_INVALID"
				required="true"
				/>
		<field
				name="address"
				type="text"
				label="COM_REDSHOPB_ADDRESS_LABEL"
				description="COM_REDSHOPB_ADDRESS_DESC"
				required="true"
				/>
		<field
				name="address2"
				type="text"
				label="COM_REDSHOPB_ADDRESS2_LABEL"
				description="COM_REDSHOPB_ADDRESS2_DESC"
				/>
		<field
				name="state_id"
				type="redshopb.list_ajax"
				label="COM_REDSHOPB_COUNTRY_STATE_LABEL"
				description="COM_REDSHOPB_COUNTRY_STATE_DESC"
				formName="address"
				model="site:States"
				filter="{ 'filter.state': 1 }"
				completionFilter="filter.search_states"
				dynamicFilters="{'filter.country_id' : '#jform_country_id'}"
				resetWhenDynamicFilterChanged="true"
				property="name"
				minimumInputLength="0"
				ordering="s.name"
				multiple="false"
				required="false"
				allowCreate="false"
				limit="100"
				default=""
				hint="JSELECT"
		/>
        <field
                name="email"
                type="email"
                class="inputbox"
                description="COM_REDSHOPB_USER_FIELD_EMAIL_DESC"
                label="JGLOBAL_EMAIL"
                validate="email"
        />
        <field
                name="phone"
                type="text"
                label="COM_REDSHOPB_ADDRESS_PHONE_LABEL"
                description="COM_REDSHOPB_ADDRESS_PHONE_DESC"
        />
	</fieldset>
</form>
