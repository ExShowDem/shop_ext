<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset addfieldpath="/libraries/redshopb/form/fields">
        <field
                name="id"
                type="hidden"
                default="0"
                label="COM_REDSHOPB_ID_LABEL"
                description="COM_REDSHOPB_ID_DESC"
                readonly="true"
                />
        <field
                name="name"
                type="text"
                label="COM_REDSHOPB_STOCKROOM_NAME_LABEL"
                description="COM_REDSHOPB_STOCKROOM_NAME_DESC"
                required="true"
                maxlength="255"
                />
        <field
                name="alias"
                type="hidden"
                label="COM_REDSHOPB_ALIAS_LABEL"
                description="COM_REDSHOPB_ALIAS_DESC"
                />
        <field name="ordering"
                type="stockroomordering"
                label="COM_REDSHOPB_STOCKROOM_ORDERING_LABEL"
                description="COM_REDSHOPB_STOCKROOM_ORDERING_DESC">
            <option value="">JOPTION_SELECT_ORDERING</option>
        </field>
        <field
                name="description"
                type="multipleeditor"
                label="COM_REDSHOPB_STOCKROOM_DESCRIPTION_LABEL"
                description="COM_REDSHOPB_STOCKROOM_DESCRIPTION_DESC"
                cols="100"
                class="inputbox"
                filter="safehtml"
                buttons="true"
                hide="readmore,pagebreak,image"
                />
        <field
                name="color"
                type="text"
                label="COM_REDSHOPB_STOCKROOM_COLOR_LABEL"
                description="COM_REDSHOPB_STOCKROOM_COLOR_DESC"
        />
        <field
                name="company_id"
                type="company"
                label="COM_REDSHOPB_STOCKROOM_COMPANY_LABEL"
                description="COM_REDSHOPB_STOCKROOM_COMPANY_DESC"
                />
        <field
                name="address_id"
                type="hidden"
                label="COM_REDSHOPB_STOCKROOM_ADDRESS_LABEL"
                description="COM_REDSHOPB_STOCKROOM_ADDRESS_DESC"
                />
        <field
                name="min_delivery_time"
                class="input-small"
                type="number"
                validate="integer"
                label="COM_REDSHOPB_STOCKROOM_MIN_DELIVERY_TIME_LABEL"
                description="COM_REDSHOPB_STOCKROOM_MIN_DELIVERY_TIME_DESC"
                default="0"
                />
        <field
                name="max_delivery_time"
                class="input-small"
                type="number"
                validate="integer"
                label="COM_REDSHOPB_STOCKROOM_MAX_DELIVERY_TIME_LABEL"
                description="COM_REDSHOPB_STOCKROOM_MAX_DELIVERY_TIME_DESC"
                default="0"
                />
        <field
                name="stock_upper_level"
                class="input-small"
                type="number"
                validate="nullfloat"
                label="COM_REDSHOPB_STOCKROOM_STOCK_UPPER_LEVEL_LABEL"
                description="COM_REDSHOPB_STOCKROOM_STOCK_UPPER_LEVEL_DESC"
                default="0"
                />
        <field
                name="stock_lower_level"
                class="input-small"
                type="number"
                validate="nullfloat"
                label="COM_REDSHOPB_STOCKROOM_STOCK_LOWER_LEVEL_LABEL"
                description="COM_REDSHOPB_STOCKROOM_STOCK_LOWER_LEVEL_DESC"
                default="0"
                />
        <field
                name="state"
                type="radio"
                label="COM_REDSHOPB_STATE_LABEL"
                description="COM_REDSHOPB_STATE_DESC"
                required="true"
                class="btn-group"
                default="1"
                >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
        <field
                name="pick_up"
                type="radio"
                label="COM_REDSHOPB_STOCKROOM_PICK_UP_LABEL"
                description="COM_REDSHOPB_STOCKROOM_PICK_UP_DESC"
                class="btn-group"
                default="0"
        >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
				<field
						name="address_name"
						type="text"
						label="COM_REDSHOPB_NAME"
						description="COM_REDSHOPB_ADDRESS_NAME_DESC"
						maxlength="255"
						/>
				<field
						name="address_name2"
						type="text"
						label="COM_REDSHOPB_ADDRESS_NAME2_LABEL"
						description="COM_REDSHOPB_ADDRESS_NAME2_DESC"
						maxlength="255"
						/>
				<field
						name="address"
						type="text"
						label="COM_REDSHOPB_ADDRESS_LABEL"
						description="COM_REDSHOPB_ADDRESS_DESC"
						/>
				<field
						name="address2"
						type="text"
						label="COM_REDSHOPB_ADDRESS2_LABEL"
						description="COM_REDSHOPB_ADDRESS2_DESC"
						/>
				<field
						name="city"
						type="text"
						label="COM_REDSHOPB_CITY_LABEL"
						description="COM_REDSHOPB_CITY_DESC"
						/>
				<field
                        name="zip"
                        type="text"
                        label="COM_REDSHOPB_ZIP_LABEL"
                        description="COM_REDSHOPB_ZIP_DESC"
                        message="COM_REDSHOPB_ZIP_INVALID"
                        />
                <field
                        name="phone"
                        type="text"
                        label="COM_REDSHOPB_ADDRESS_PHONE_LABEL"
                        description="COM_REDSHOPB_ADDRESS_PHONE_DESC"
                        />
				<field
						name="country_id"
						type="country"
						label="COM_REDSHOPB_COUNTRY_LABEL"
						description="COM_REDSHOPB_COUNTRY_DESC"
						>
					<option value="">JOPTION_SELECT_COUNTRY</option>
				</field>
		<field
				name="state_id"
				type="redshopb.list_ajax"
				label="COM_REDSHOPB_COUNTRY_STATE_LABEL"
				description="COM_REDSHOPB_COUNTRY_STATE_DESC"
				formName="stockroom"
				model="site:States"
				filter="{ 'filter.state': 1 }"
				completionFilter="filter.search_states"
				dynamicFilters="{'filter.country_id' : '#jform_country_id'}"
				resetWhenDynamicFilterChanged="true"
				property="name"
				minimumInputLength="0"
				ordering="s.name"
				multiple="false"
				required="false"
				allowCreate="false"
				limit="100"
				default=""
				hint="JSELECT"
		/>
    </fieldset>
</form>
