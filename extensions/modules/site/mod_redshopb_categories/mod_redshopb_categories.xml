<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.8" client="site" method="upgrade">
    <name>MOD_REDSHOPB_CATEGORIES</name>
    <creationDate>March 2019</creationDate>
    <author>Aesir</author>
    <authorEmail>contact@aesircontextmarketing.com</authorEmail>
    <authorUrl>www.aesircontextmarketing.com</authorUrl>
    <copyright>Copyright (C) 2012 - 2019 Aesir. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later, see LICENSE.</license>
    <version>2.4.0</version>
    <description>MOD_REDSHOPB_CATEGORIES_DESCRIPTION</description>
    <files>
        <folder>language</folder>
        <folder>tmpl</folder>
        <filename>helper.php</filename>
        <filename module="mod_redshopb_categories">mod_redshopb_categories.php</filename>
        <filename>mod_redshopb_categories.xml</filename>
    </files>
    <scriptfile>script.php</scriptfile>
    <config>
        <fields name="params">
            <fieldset name="basic">
                 <field
                        name="hide_empty"
                        type="radio"
                        class="btn-group"
                        label="MOD_REDSHOPB_CATEGORIES_HIDE_EMPTY_CATEGORY_LABEL"
                        description="MOD_REDSHOPB_CATEGORIES_HIDE_EMPTY_CATEGORY_DESC"
                        default="1">
                        <option value="1">JYES</option>
                        <option value="0">JNO</option>
                </field>
                <field
                        name="startLevel"
                        type="list"
                        default="1"
                        label="MOD_REDSHOPB_CATEGORIES_FIELD_STARTLEVEL_LABEL"
                        description="MOD_REDSHOPB_CATEGORIES_FIELD_STARTLEVEL_DESC"
                        >
                    <option value="1">J1</option>
                    <option value="2">J2</option>
                    <option value="3">J3</option>
                    <option value="4">J4</option>
                    <option value="5">J5</option>
                    <option value="6">J6</option>
                    <option value="7">J7</option>
                    <option value="8">J8</option>
                    <option value="9">J9</option>
                    <option value="10">J10</option>
                </field>
                <field
                        name="endLevel"
                        type="list"
                        default="999"
                        label="MOD_REDSHOPB_CATEGORIES_FIELD_ENDLEVEL_LABEL"
                        description="MOD_REDSHOPB_CATEGORIES_FIELD_ENDLEVEL_DESC">
                    <option value="999">JALL</option>
                    <option value="1">J1</option>
                    <option value="2">J2</option>
                    <option value="3">J3</option>
                    <option value="4">J4</option>
                    <option value="5">J5</option>
                    <option value="6">J6</option>
                    <option value="7">J7</option>
                    <option value="8">J8</option>
                    <option value="9">J9</option>
                    <option value="10">J10</option>
                </field>
                <field
                        name="showAllChildren"
                        type="radio"
                        class="btn-group btn-group-yesno"
                        default="0"
                        label="MOD_REDSHOPB_CATEGORIES_ALLCHILDREN_LABEL"
                        description="MOD_REDSHOPB_CATEGORIES_ALLCHILDREN_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="hideForEndLevel"
                        type="radio"
                        class="btn-group btn-group-yesno"
                        default="0"
                        label="MOD_REDSHOPB_CATEGORIES_HIDEFORENDLEVEL_LABEL"
                        description="MOD_REDSHOPB_CATEGORIES_HIDEFORENDLEVEL_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>

            <fieldset name="advanced">
                <field
                        name="tag_id"
                        type="text"
                        label="MOD_REDSHOPB_CATEGORIES_FIELD_TAG_ID_LABEL"
                        description="MOD_REDSHOPB_CATEGORIES_FIELD_TAG_ID_DESC" />

                <field
                        name="class_sfx"
                        type="text"
                        label="MOD_REDSHOPB_CATEGORIES_FIELD_CLASS_LABEL"
                        description="MOD_REDSHOPB_CATEGORIES_FIELD_CLASS_DESC" />

                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC"
                        />
                <field
                        name="moduleclass_sfx"
                        type="textarea" rows="3"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
                        />
                <field
                        name="cache"
                        type="list"
                        default="1"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                <field
                        name="cache_time"
                        type="text"
                        default="900"
                        label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                        description="COM_MODULES_FIELD_CACHE_TIME_DESC"
                        />
            </fieldset>
        </fields>
    </config>
</extension>
