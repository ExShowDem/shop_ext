<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>mod_redshopb_impersonation_breadcrumbs</name>
	<creationDate>January 2019</creationDate>
	<author>Aesir</author>
	<authorEmail>contact@aesircontextmarketing.com</authorEmail>
	<authorUrl>www.aesircontextmarketing.com</authorUrl>
	<copyright>Copyright (C) 2012 - 2019 Aesir. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later, see LICENSE.</license>
	<version>2.3.0</version>
	<description>MOD_REDSHOPB_IMPERSONATION_BREADCRUMBS_XML_DESCRIPTION</description>
	<files>
		<folder>language</folder>
		<folder>tmpl</folder>
		<filename module="mod_redshopb_impersonation_breadcrumbs">mod_redshopb_impersonation_breadcrumbs.php</filename>
		<filename>mod_redshopb_impersonation_breadcrumbs.xml</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="showHere"
					type="radio"
					label="MOD_REDSHOPB_IMPERSONATION_BREADCRUMBS_FIELD_SHOWHERE_LABEL"
					description="MOD_REDSHOPB_IMPERSONATION_BREADCRUMBS_FIELD_SHOWHERE_DESC"
					class="btn-group btn-group-yesno"
					default="1"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="separator"
					type="text"
					label="MOD_REDSHOPB_IMPERSONATION_BREADCRUMBS_FIELD_SEPARATOR_LABEL"
					description="MOD_REDSHOPB_IMPERSONATION_BREADCRUMBS_FIELD_SEPARATOR_DESC"
				/>

			</fieldset>
			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>

				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
					rows="3"
				/>

				<field
					name="cache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
					default="0"
					>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
					default="0"
				/>

				<field
					name="cachemode"
					type="hidden"
					default="itemid"
					>
					<option value="itemid"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
