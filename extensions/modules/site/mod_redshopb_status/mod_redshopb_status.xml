    <version>2.3.0</version>
    <description>MOD_REDSHOPB_STATUS_XML_DESCRIPTION</description>
    <files>
        <folder>language</folder>
        <folder>tmpl</folder>
        <filename>index.html</filename>
        <filename module="mod_redshopb_status">mod_redshopb_status.php</filename>
        <filename>mod_redshopb_status.xml</filename>
    </files>
    <scriptfile>script.php</scriptfile>
    <media folder="media">
        <folder>mod_redshopb_status</folder>
    </media>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="user_profile"
                        type="radio"
                        default="1"
                        class="btn-group btn-group-yesno"
                        label="MOD_REDSHOPB_STATUS_USER_PROFILE_LABEL"
                        description="MOD_REDSHOPB_STATUS_USER_PROFILE_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="cart"
                        type="radio"
                        default="1"
                        class="btn-group btn-group-yesno"
                        label="MOD_REDSHOPB_STATUS_CART_LABEL"
                        description="MOD_REDSHOPB_STATUS_CART_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="show_restore_save_cart_dropdown"
                        type="radio"
                        default="0"
                        class="btn-group btn-group-yesno"
                        label="MOD_REDSHOPB_STATUS_SHOW_RESTORE_SAVE_CART_DROPDOWN_LABEL"
                        description="MOD_REDSHOPB_STATUS_SHOW_RESTORE_SAVE_CART_DROPDOWN_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="total_in_head"
                        type="radio"
                        default="0"
                        class="btn-group btn-group-yesno"
                        label="MOD_REDSHOPB_STATUS_TOTAL_IN_HEAD_LABEL"
                        description="MOD_REDSHOPB_STATUS_TOTAL_IN_HEAD_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="cart_show_discount_column"
                        type="radio"
                        default="1"
                        class="btn-group btn-group-yesno"
                        label="MOD_REDSHOPB_STATUS_CART_SHOW_DISCOUNT_COLUMN_LABEL"
                        description="MOD_REDSHOPB_STATUS_CART_SHOW_DISCOUNT_COLUMN_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="cart_update_quality"
                        type="radio"
                        label="MOD_REDSHOPB_STATUS_CART_UPDATE_QUANTITY_LABEL"
                        description="MOD_REDSHOPB_STATUS_CART_UPDATE_QUANTITY_DESC"
                        default="1"
                        class="btn-group"
                        >
                    <option value="1">JENABLED</option>
                    <option value="0">JDISABLED</option>
                </field>
                <field
                        name="cart_product_sku"
                        type="radio"
                        label="MOD_REDSHOPB_STATUS_CART_DISPLAT_PRODUCT_SKU_LABEL"
                        description="MOD_REDSHOPB_STATUS_CART_DISPLAT_PRODUCT_SKU_DESC"
                        default="1"
                        class="btn-group"
                        >
                    <option value="1">JENABLED</option>
                    <option value="0">JDISABLED</option>
                </field>
								<field
                        name="shop_changecustomer_buttons"
                        type="radio"
                        label="MOD_REDSHOPB_STATUS_SHOP_CHANGECUSTOMER_BUTTONS_LABEL"
                        description="MOD_REDSHOPB_STATUS_SHOP_CHANGECUSTOMER_BUTTONS_DESC"
                        default="0"
                        class="btn-group"
                        >
                    <option value="1">JENABLED</option>
                    <option value="0">JDISABLED</option>
                </field>
                <field
                        name="display_import_csv_button"
                        type="radio"
                        label="MOD_REDSHOPB_STATUS_DISPLAY_IMPORT_CSV_BUTTON_LABEL"
                        description="MOD_REDSHOPB_STATUS_DISPLAY_IMPORT_CSV_BUTTON_DESC"
                        default="0"
                        class="btn-group"
                >
                    <option value="1">JENABLED</option>
                    <option value="0">JDISABLED</option>
                </field>
            </fieldset>
            <fieldset name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC"
                        />
                <field
                        name="moduleclass_sfx"
                        type="textarea" rows="3"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
                        />
                <field
                        name="cache"
                        type="list"
                        default="1"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                <field
                        name="cache_time"
                        type="text"
                        default="900"
                        label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                        description="COM_MODULES_FIELD_CACHE_TIME_DESC"
                        />
            </fieldset>
        </fields>
    </config>
</extension>
