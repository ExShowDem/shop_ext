<?xml version="1.0" encoding="utf-8"?>
<extension version="3.8" type="plugin" group="redshipping" method="upgrade">
    <name>PLG_REDSHIPPING_DEFAULT_SHIPPING</name>
    <creationDate>July 2018</creationDate>
    <author>Aesir</author>
    <authorEmail>contact@aesircontextmarketing.com</authorEmail>
    <authorUrl>www.aesircontextmarketing.com</authorUrl>
    <copyright>Copyright (C) 2012 - 2019 Aesir. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later, see LICENSE.</license>
    <version>2.0.0</version>
    <description>PLG_REDSHIPPING_DEFAULT_SHIPPING_DESC</description>
    <files>
        <folder>helpers</folder>
        <folder>language</folder>
        <filename plugin="default_shipping">default_shipping.php</filename>
    </files>
    <scriptfile>install.php</scriptfile>
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/libraries/redshopb/form/fields">
                <field
                        name="is_shipper"
                        type="hidden"
                        default="1"
                        value="1"
                        />
            </fieldset>
            <fieldset name="extra" label="PLG_REDSHIPPING_DEFAULT_SHIPPING_FIELDSET_EXTRA">
                <field
                        name="shipping_title"
                        type="text"
                        default="Default shipping"
                        label="PLG_REDSHIPPING_DEFAULT_SHIPPING_FIELD_TITLE_LABEL"
                        description="PLG_REDSHIPPING_DEFAULT_SHIPPING_FIELD_TITLE_DESC"
                        />
                <field
                        name="shipping_logo"
                        type="text"
                        default=""
                        label="PLG_REDSHIPPING_DEFAULT_SHIPPING_FIELD_LOGO_LABEL"
                        description="PLG_REDSHIPPING_DEFAULT_SHIPPING_FIELD_LOGO_DESC"
                        />
            </fieldset>
        </fields>
    </config>
</extension>
