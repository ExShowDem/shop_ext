<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset addfieldpath="/libraries/redshopb/form/fields">
        <field
                name="id"
                type="hidden"
                default="0"
                label="COM_REDSHOPB_ID_LABEL"
                description="COM_REDSHOPB_ID_DESC"
                readonly="true"
                />
        <field
                name="name"
                type="text"
                label="COM_REDSHOPB_STOCKROOM_GROUP_NAME_LABEL"
                description="COM_REDSHOPB_STOCKROOM_GROUP_NAME_DESC"
                required="true"
                maxlength="255"
                />
        <field
                name="alias"
                type="hidden"
                label="COM_REDSHOPB_ALIAS_LABEL"
                description="COM_REDSHOPB_ALIAS_DESC"
                />
        <field
                name="color"
                type="text"
                label="COM_REDSHOPB_STOCKROOM_GROUP_COLOR_LABEL"
                description="COM_REDSHOPB_STOCKROOM_GROUP_COLOR_DESC"
        />
        <field
                name="deadline_weekday_1"
                type="timepicker"
                seconds="false"
                meridian="false"
                inputs="true"
                label="COM_REDSHOPB_STOCKROOM_GROUP_MONDAY_LABEL"
                description="COM_REDSHOPB_STOCKROOM_GROUP_MONDAY_DESC"
        />
        <field
                name="deadline_weekday_2"
                type="timepicker"
                seconds="false"
                meridian="false"
                inputs="true"
                label="COM_REDSHOPB_STOCKROOM_GROUP_TUESDAY_LABEL"
                description="COM_REDSHOPB_STOCKROOM_GROUP_TUESDAY_DESC"
        />
        <field
                name="deadline_weekday_3"
                type="timepicker"
                seconds="false"
                meridian="false"
                inputs="true"
                label="COM_REDSHOPB_STOCKROOM_GROUP_WEDNESDAY_LABEL"
                description="COM_REDSHOPB_STOCKROOM_GROUP_WEDNESDAY_DESC"
        />
        <field
                name="deadline_weekday_4"
                type="timepicker"
                seconds="false"
                meridian="false"
                inputs="true"
                label="COM_REDSHOPB_STOCKROOM_GROUP_THURSDAY_LABEL"
                description="COM_REDSHOPB_STOCKROOM_GROUP_THURSDAY_DESC"
        />
        <field
                name="deadline_weekday_5"
                type="timepicker"
                seconds="false"
                meridian="false"
                inputs="true"
                label="COM_REDSHOPB_STOCKROOM_GROUP_FRIDAY_LABEL"
                description="COM_REDSHOPB_STOCKROOM_GROUP_FRIDAY_DESC"
        />
        <field
                name="description"
                type="editor"
                label="COM_REDSHOPB_STOCKROOM_GROUP_DESCRIPTION_LABEL"
                description="COM_REDSHOPB_STOCKROOM_GROUP_DESCRIPTION_DESC"
                cols="100"
                class="inputbox"
                filter="safehtml"
                buttons="true"
                hide="readmore,pagebreak,image"
                />
        <field
                name="stockrooms"
                type="stockrooms"
                label="COM_REDSHOPB_STOCKROOM_GROUP_STOCKROOMS_LABEL"
                description="COM_REDSHOPB_STOCKROOM_GROUP_STOCKROOMS_DESC"
                multiple="true"
                restriction="company"
                emptystart="true"
        />
        <field name="ordering"
               type="stockroomgroupordering"
               label="COM_REDSHOPB_STOCKROOM_GROUP_ORDERING_LABEL"
               description="COM_REDSHOPB_STOCKROOM_GROUP_ORDERING_DESC">
            <option value="">JOPTION_SELECT_ORDERING</option>
        </field>
        <field
                name="state"
                type="radio"
                label="COM_REDSHOPB_STATE_LABEL"
                description="COM_REDSHOPB_STATE_DESC"
                required="true"
                class="btn-group"
                default="1"
                >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
    </fieldset>
</form>
