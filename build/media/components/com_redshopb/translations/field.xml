<?xml version="1.0"?>
<contentelement type="contentelement">
    <name>Aesir E-CommerceField</name>
    <author>Aesir</author>
    <copyright>Copyright (C) 2012 - 2019 Aesir. All rights reserved.</copyright>
    <version>2.0.0</version>
    <description>Field Table Definition for the Aesir E-Commerce extension</description>
    <reference>
        <table name="redshopb_field">
            <field name="id" type="referenceid" translate="0" alwaysFallback="false" filter="RAW" description="">ID</field>
            <field name="name" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Field Name</field>
            <field name="title" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Title</field>
            <field name="alias" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Alias</field>
            <field name="description" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Description</field>
            <filter><![CDATA[]]></filter>
        </table>
        <component>
            <editForm admin="false" option="com_redshopb" view="field" layout="edit" identifier="id" showbutton="true" htmlposition=".btn-toolbar:first .btn-group:first" checkoriginalid="false"/>
        </component>
    </reference>
</contentelement>
