<?xml version="1.0"?>
<contentelement type="contentelement">
    <name>Aesir E-CommerceField Value</name>
    <author>Aesir</author>
    <copyright>Copyright (C) 2012 - 2019 Aesir. All rights reserved.</copyright>
    <version>2.0.0</version>
    <description>Field Value Table Definition for the Aesir E-Commerce extension</description>
    <reference>
        <table name="redshopb_field_value">
            <field name="id" type="referenceid" translate="0" alwaysFallback="false" filter="RAW" description="">ID</field>
            <field name="name" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Field Value Name</field>
            <field name="value" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Actual value</field>
            <filter><![CDATA[]]></filter>
        </table>
        <component>
            <editForm admin="false" option="com_redshopb" view="field_value" layout="edit" identifier="id" showbutton="true" htmlposition=".btn-toolbar:first .btn-group:first" checkoriginalid="false"/>
        </component>
    </reference>
</contentelement>
